<h2>
  <%= @list.name %>
</h2>

<% @list.bookmarks.each do |bookmark| %>
  <h6 class='ml-3'> <%= bookmark.movie.title %> </h6>
  <p class='light-text p-6'> <%= bookmark.comment %></p>
  <p class='text-danger'><%= link_to 'Remove title from list', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></p>
<% end %>


<div>
  <%= link_to 'Add movie do this list', new_list_bookmark_path(@list), class:'btn btn-flat m-3' %>
</div>

<div class='ml-3'>
  <%= link_to 'Back to all lists', lists_path, class:'btn btn-flat' %>
</div>
